
/* BeautyInside 테이블 */


--회원 테이블
DROP TABLE MEMBER;
CREATE TABLE MEMBER(
    NO number PRIMARY KEY,
    ID varchar2(20) UNIQUE,
    pwd varchar2(20) NOT NULL,
    NAME varchar2(20) NOT NULL,
    birth varchar2(20),
    tel varchar2(20) NOT NULL,
    gender varchar2(10),
    email varchar2(30),
    zipcode number,
    address1 varchar2(80),
    address2 varchar2(80),
    regdate date DEFAULT SYSDATE,
    dormant varchar2(2) DEFAULT 'N'
);


--회원 시퀀스
DROP SEQUENCE member_seq;
CREATE SEQUENCE member_seq
start WITH 1
INCREMENT BY 1
NOCYCLE;


--우편번호 테이블
DROP TABLE zipcode;
CREATE TABLE zipcode
(
    zipcode          VARCHAR2 (5),
    sido             VARCHAR2 (20),
    sido_en          VARCHAR2 (40),
    sigungu          VARCHAR2 (20),
    sigungu_en       VARCHAR2 (40),
    blank            VARCHAR2 (5),
    blank2           VARCHAR2 (5),
    dorocode         VARCHAR2 (12),
    doro             VARCHAR2 (80),
    doro_en          VARCHAR2 (80),
    jiha             VARCHAR2 (1),
    build_a          NUMBER,
    build_b          NUMBER,
    mgrno            VARCHAR2 (40),
    sigungu_build    VARCHAR2 (200),
    bubcode          VARCHAR2 (20),
    bubjung          VARCHAR2 (20),
    haengjung        VARCHAR2 (40),
    blank3           VARCHAR2 (5),
    detaildong       VARCHAR2 (20),
    san              VARCHAR2 (1),
    eupkey           VARCHAR2 (2)
);


--우편번호 간소화 뷰
DROP VIEW v_zipcode;
CREATE VIEW v_zipcode
AS
    SELECT zipcode        "우편번호",
           sido           "시도",
           sigungu        "시군구",
           doro           "도로명",
           build_a        "도로번지",
           haengjung      "지명",
           detaildong     "동",
           eupkey         "지명번지"
      FROM zipcode;


--리뷰 게시판 테이블
DROP TABLE review;
CREATE TABLE review(
    NO number PRIMARY KEY, --글 번호
    ID varchar2(20), --작성자 아이디
    NAME varchar2(15) NOT NULL, --작성자
    title varchar2(100) NOT NULL, --제목
    CONTENT clob NOT NULL, --내용
    COUNT number DEFAULT 0, --조회수
    regdate date DEFAULT SYSDATE, --등록일
    fileName varchar2(200) NULL, --중복 파일명
    orgFileName varchar2(200) NULL, --원본 파일명
    fileSize number DEFAULT 0 --업로드 파일 크기
);


--리뷰 게시판 시퀀스
DROP SEQUENCE review_seq;
CREATE SEQUENCE review_seq
start WITH 1
INCREMENT BY 1
NOCYCLE;


--리뷰 댓글 테이블
DROP TABLE comments;
CREATE TABLE comments
(
    NO         NUMBER PRIMARY KEY,
    ogNo       NUMBER NOT NULL,
    groupNo    NUMBER DEFAULT 0,
    sortNo     NUMBER DEFAULT 0,
    ID         VARCHAR2 (20),
    NAME       VARCHAR2 (20) NOT NULL,
    target     VARCHAR2 (20) NULL,
    CONTENT    CLOB NOT NULL,
    regdate    DATE DEFAULT SYSDATE,
    delFlag    VARCHAR2 (2) DEFAULT 'N'
);


--리뷰 댓글 시퀀스
DROP SEQUENCE comments_seq;
CREATE SEQUENCE comments_seq
START WITH 1
INCREMENT BY 1
NOCYCLE;


--예약 테이블
DROP TABLE reserve;
CREATE TABLE reserve
(
    NO         NUMBER PRIMARY KEY,
    NAME       VARCHAR2 (20) NOT NULL,
    email      VARCHAR2 (50),
    tel        VARCHAR2 (20) NOT NULL,
    service    VARCHAR2 (50) NOT NULL,
    price      NUMBER NOT NULL,
    resDate    VARCHAR2 (30) NOT NULL,
    resWords   CLOB NULL,
    regdate    DATE DEFAULT SYSDATE,
    status     VARCHAR2 (20) DEFAULT '대기'
);


--예약 시퀀스
DROP SEQUENCE reserve_seq;
CREATE SEQUENCE reserve_seq
START WITH 1
INCREMENT BY 1
NOCYCLE;


--채팅 테이블
DROP TABLE chat;
CREATE TABLE chat
(
    id         VARCHAR2 (20) NOT NULL,
    name       VARCHAR2 (20) NOT NULL,
    content    CLOB NOT NULL,
    regdate    DATE DEFAULT SYSDATE
);


--일자별 요약 검색 테이블
DROP TABLE SUMMARYDATE;
CREATE TABLE summarydate (
   regdate DATE,
   service number,
   take NUMBER,
   userJoin NUMBER,
   review NUMBER
);







